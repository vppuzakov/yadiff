    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'yadiff'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=yadiff",
                    "--package=yadiff"
                ],
                "filter": {
                    "name": "yadiff",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'yadiff'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=yadiff",
                    "--package=yadiff"
                ],
                "filter": {
                    "name": "yadiff",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
